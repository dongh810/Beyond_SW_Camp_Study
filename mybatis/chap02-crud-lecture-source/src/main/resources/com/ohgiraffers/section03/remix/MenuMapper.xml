<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ohgiraffers.section03.remix.MenuMapper">
    <resultMap type="com.ohgiraffers.section03.remix.MenuDTO" id="menuResultMap"> <!-- MenuDTO타입으로 반환하고, id에 설정한 이름으로 필요한곳에서 가져다쓴다. -->
        <id property="menuCode" column="MENU_CODE"/> <!-- pk는 id로 설정 -->
        <result property="menuName" column="MENU_NAME"/>
        <result property="menuPrice" column="MENU_PRICE"/>
        <result property="categoryCode" column="CATEGORY_CODE"/>
        <result property="orderableStatus" column="ORDERABLE_STATUS"/>
    </resultMap>

    <select id="selectAllMenus" resultMap="menuResultMap"> <!-- 이 결과를 menuDTO로 처리해줘! 라고 resultMap에 위의 resultMap의 아이디로 설정해준다. -->
        SELECT
              MENU_CODE
            , MENU_NAME
            , MENU_PRICE
            , CATEGORY_CODE
            , ORDERABLE_STATUS
        FROM TBL_MENU
    </select>
    <select id="selectMenu" resultMap="menuResultMap" parameterType="_int">
        SELECT
              MENU_CODE
            , MENU_NAME
            , MENU_PRICE
            , CATEGORY_CODE
            , ORDERABLE_STATUS
         FROM TBL_MENU
        WHERE MENU_CODE = #{menuCode}
    </select>

    <!-- 설명. DML용 태그는 반환형의 개념이 필요없다. (resultMap 또는 resultType 속성을 태그에 사용하지 않는다.) -->
    <!-- 설명. parameterType으로 던져지는 타입이 기본적으로 존재하는 자료형이 아닌경우 풀 클래스명을 사용한다.
                (설정용 xml에 typeAlias 설정을 하면 줄여 쓸 수는 있다.)
    -->
    <insert id="insertMenu" parameterType="com.ohgiraffers.section03.remix.MenuDTO">
        INSERT
          INTO TBL_MENU
        (
          MENU_NAME
        , MENU_PRICE
        , CATEGORY_CODE
        , ORDERABLE_STATUS
        )
        VALUES
        (
          #{menuName}
        , #{menuPrice}
        , #{categoryCode}
        , 'Y'
        )
    </insert>

    <update id="updateMenu" parameterType="com.ohgiraffers.section03.remix.MenuDTO">
        UPDATE
            TBL_MENU
                SET MENU_NAME = #{menuName}
                , MENU_PRICE = #{menuPrice}
         WHERE MENU_CODE = #{menuCode}
    </update>

    <delete id="deleteMenu" parameterType="_int">
        DELETE
          FROM TBL_MENU
         WHERE MENU_CODE = #{menuCode}
    </delete>

</mapper>